<li id="{{eventId}}" class="event-row list-group-item {{eventId}}">
  <span class="text-secondary pull-right">Edit event</span>
  <form class="form-inline " id="{{eventId}}-form">
    <div class="form-group meta-data">
      <strong>
        <div class=" col-md-4">
          <input type="text" class="state-info-text pull-left" readonly value="{{eventId}}">
        </div>
        <div class="col-md-4">
          <input type="text" class="timestamp " id="lastUpdatedHuman" readonly {{#if lastUpdatedHuman}} value="{{lastUpdatedHuman}}"{{/if}}{{#unless lastUpdatedHuman}}value="{{lastUpdated}}"{{/unless}}>
        </div>
        {{#if updatedBy}}
        <div class="col-md-4">
          <input type="text" class="" id="updatedBy" readonly value="{{updatedBy}}">
        </div>
        {{/if}}
        {{#if enteredBy}}
        <div class="form-group col-md-4">
          <label for="enteredBy">Submitted By:</label>
          <input type="text" class="" id="enteredBy" readonly value="{{enteredBy}}">
        </div>
        {{/if}}
      </strong>
    </div>
    <div class="main-data">
      <div class="form-group">
        <label class="sr-only" for="Member">Member</label>
        <input type="text" data-provide="typeahead" autocomplete="off" class="member-input form-control event-input" id="Member" placeholder="Member" value="{{Member}}">
      </div>
      <div class="form-group {{#unless district}}hidden{{/unless}}">
        <label class="sr-only" for="district">District</label>
        <input type="text" class="form-control event-input" id="district" placeholder="zero padded number" value="{{district}}">
      </div>
      <div class="input-group">
        <input type="text" class="form-control event-input" aria-label="..." id="chamber" value="{{chamber}}" readonly placeholder="chamber">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right chamber-dropdown">
            <li>
              <a data-value="upper" href="#">Upper (senate)</a>
            </li>
            <li>
              <a data-value="lower" href="#">Lower (house)</a>
            </li>
          </ul>
        </div>
        <!-- /btn-group -->
      </div>
      <!-- /input-group -->
      <div class="input-group">
        <input type="text" class="form-control event-input" aria-label="..." id="meetingType" value="{{meetingType}}" readonly>
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <span class="caret"></span></button>
          <ul class="dropdown-menu dropdown-menu-right meeting-type-dropdown">
            <li><a data-value="Town Hall" href="#">Town Hall</a></li>
            <li><a data-value="Tele-Town Hall" href="#">Tele-Town Hall</a></li>
            <li><a data-value="Ticketed Event" href="#">Ticketed Event</a></li>
            <li><a data-value="Empty Chair Town Hall" href="#">Empty Chair Town Hall</a></li>
            <li><a data-value="Campaign Town Hall" href="#">Campaign Town Hall</a></li>
            <li><a data-value="Hearing" href="#">Hearing</a></li>
            <li><a data-value="Adopt-A-District/State" href="#">Adopt-A-District/State</a></li>
            <li><a data-value="Empty Chair Town Hall" href="#">Empty Chair Town Hall</a></li>
            <li><a data-value="Hearing" href="#">Hearing</a></li>
            <li><a data-value="DC Event" href="#">DC Event</a></li>
            <li><a data-value="Office Hours" href="#">Office Hours</a></li>
            <li><a data-value="Candidate Forum" href="#">Candidate Forum/Debate</a></li>
            <li><a data-value="Other" href="#">Other</a></li>
          </ul>
        </div><!-- /btn-group -->
      </div><!-- /input-group -->
      <label class="sr-only" for="iconFlag">Event Type</label>
      <div class="input-group">
        <input type="text" class="form-control event-input" id="iconFlag" value="{{iconFlag}}" readonly placeholder="Symbol for the map">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <span class="caret"></span></button>
          <ul class="dropdown-menu dropdown-menu-right icon-flag-dropdown">
            <li><a data-value="in-person" href="#"><span class="event-icon event-icon__in-person"></span>Member of Congress will be present</a></li>
            <li><a data-value="mfol" href="#"><span class="event-icon event-icon__mfol"></span>THFOL</a></li>
            <li><a data-value="staff" href="#"><span class="event-icon event-icon__staff"></span>Held by staff</a></li>
            <li><a data-value="activism" href="#"><span class="event-icon event-icon__activism"></span>Organized by activists</a></li>
            <li><a data-value="tele" href="#"><span class="event-icon event-icon__tele"></span>Tele-Town hall or online event</a></li>
            <li><a data-value="campaign" href="#"><span class="event-icon event-icon__campaign"></span>Campaign event</a></li>
          </ul>
        </div><!-- /btn-group -->
      </div><!-- /input-group -->
      <label class="sr-only " for="party">Party</label>
      <div class="input-group">
        <input type="text" class="form-control event-input" id="party" value="{{party}}" readonly placeholder="Party">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <span class="caret"></span></button>
          <ul class="dropdown-menu dropdown-menu-right party-dropdown">
            <li><a data-value="Democratic" href="#">Democratic</a></li>
            <li><a data-value="Republican" href="#">Republican</a></li>
            <li><a data-value="Independent" href="#">Independent</a></li>
          </ul>
        </div><!-- /btn-group -->
      </div><!-- /input-group -->
    </div>
    <section class="adopter-data non-standard hidden">
      <div class="form-group col-md-12" id="adopter-member-form-group">
        <label for="districtAdopter">MOC appearing at event (adopter)</label>
        <input type="text" class="form-control input-underline" id="districtAdopter" placeholder="Full name" value="{{adopter-member-form-group}}" autocomplete="off">
        <span id="adopter-member-help-block" class="help-block">Only first name and last name, not titles</span>
      </div>
    </section>
    <div class="location-data">
      <div class="form-group">
        <label class="sr-only" for="eventName">Event Title</label>
        <input type="text" class="form-control event-input wide" id="eventName" placeholder="Event Title" value="{{eventName}}">
      </div>
      <div class="form-group general-inputs">
        <label class="sr-only" for="Location">Location</label>
        <input type="text" class="form-control event-input wide" id="Location" placeholder="Location" value="{{Location}}">
      </div>
      <div class="input-group general-inputs">
        <input type="text" class="form-control event-input wide" id="address" placeholder="Address" value="{{address}}">
        <span class="input-group-btn">
          <button class="btn btn-default disabled" type="button" id="geocode-button">GeoCode!</button>
        </span>
      </div><!-- /input-group -->
      <div class="form-group general-inputs">
        <label class="sr-only" for="addressType">Address Type</label>
        <input type="text" class="" id="addressType" placeholder="Address type" value="street" readonly>
      </div>
      <div class="text-info non-standard tele-inputs hidden">
      <div class="form-group col-md-12">
        <label class="" for="phoneNumber">Phone Number format: (555) 555-5555</label>
        <input type="tel" class="form-control" id="phoneNumber" placeholder="Phone Number" value="{{phoneNumber}}">
        <span id="phoneNumber-error" class="help-block error-message hidden">Please enter a valid phone number</span>
      </div>
      <div class="form-group general-inputs">
        <label class="sr-only" for="locationCheck">Location Check</label>
        <input type="text" class="text-success" id="locationCheck" placeholder="please geocode" {{#if lat}}value="Location is valid"{{/if }} readonly>
      </div>
    </div>
    <div class="time-data">
      <div class="checkbox">
        <label>
          <input type="checkbox" class="date-string" {{#if repeatingEvent}}checked{{/if}}>
          <span class="checkbox-label">Repeating event (eg. 'First Wed')</span>
        </label>
      </div>
      <div class="form-group">
        <label class="sr-only" for="yearMonthDay">Date</label>
        <input type="date" class="form-control datetime date event-input" id="yearMonthDay" placeholder="Date" value="{{yearMonthDay}}">
      </div>
      <div class="form-group {{#unless repeatingEvent}}hidden{{/unless}} repeating">
        <label class="sr-only" for="repeatingString">Repeating Event</label>
        <input type="text" class="form-control event-input" id="repeatingEvent" placeholder="Eg. First Tuesday of the month" value="{{repeatingEvent}}">
      </div>
      <div class="form-group">
        <label for="Time">Start Time (HH:MM AM/PM)</label>
        <input type="time" class="form-control event-input datetime" id="timeStart24" placeholder="Start Time" value="{{timeStart24}}">
      </div>
      <div class="form-group">
        <label for="endTime">End Time (HH:MM AM/PM)</label>
        <input type="time" class="form-control event-input datetime" id="timeEnd24" placeholder="End Time" value="{{timeEnd24}}">
      </div>
      <div class="form-group">
        <label class="sr-only" for="dateChanged">Date Changed Flag</label>
        <input type="hidden" class="form-control event-input" id="dateChanged" placeholder="" value="true" readonly>
      </div>
    </div>
    <div class="extra-data">
      <div class="form-group">
        <label for="link">URL related to event (optional)</label>
        <input type="url" class="form-control event-input" id="link" placeholder="Link" value="{{link}}">
      </div>
      <div class="form-group">
        <label  for="linkName">Link name (optional)</label>
        <input type="text" class="form-control event-input" id="linkName" placeholder="Link Name" value="{{linkName}}">
      </div>
    </div>
    <div class="notes-data">
      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <label for="Notes">Public Notes</label>
            <textarea class="form-control event-input" id="Notes" placeholder="Notes about event that cannot be entered anywhere else." rows=3>{{Notes}}</textarea>
          </div>
        </div>
      </div>
    </div>
    <div class="internal-notes-data">
      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <label for="Internal-Notes">Internal Notes</label>
            <textarea class="form-control event-input" id="Internal-Notes" placeholder="Notes for Town Hall Project team." rows=3>{{Internal-Notes}}</textarea>
          </div>
        </div>
      </div>
    </div>
    <div class="text-center btns">
      <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-blue " id="archive" data-id="{{eventId}}" data-district="{{District}}" data-state="{{state}}" data-toggle="tooltip" data-placement="top" title="For events that occured but are in the past">Archive</button>
        <button type="button" class="btn btn-secondary " id="delete" data-id="{{eventId}}" data-path="townHalls" data-toggle="tooltip" data-placement="top" title="For events that were canceled or wrong">Delete</button>
        <button type="submit" class="btn" id="update-button">Update</button>
      </div>
      <span id="write-error" class="help-block write-error error-message hidden">Could not write to the database, check that you have the correct permission</span>
    </div>
  </div>
  </form>
  <div class="preview">
    <span class="text-secondary pull-right">Preview</span>
        <span class="member">
        <h4>
        {{Member}}
        <small>({{party}})  {{state}},   {{displayDistrict}}
        </small>
      </h4>
      <span class="badge badge-default badge-pill pull-right">  {{meetingType}}</span>
      </span>
      <ul class="list-inline list-inline-separated">
        {{#if dateString}}
        <li>{{dateString}}
        </li>
        {{/if}}
        {{#if Time}}
        <li>{{Time}}{{#if timeZone}}, {{timeZone}}{{/if}}</li>
        {{/if}}
        {{#if timeEnd}}
        <li>- {{timeEnd}}{{#if timeZone}}, {{timeZone}}{{/if}}</li>
        {{/if}}
        {{#if eventName}}
        <li>{{eventName}}</li>
        {{/if}}
        {{#if Location}}
        <li>{{Location}}</li>
        {{/if}}
        <li>{{address}}</li>
        {{#if phoneNumber}}
        <li>{{phoneNumber}}</li>
        {{/if}}
        {{#if RSVP}}
        <li>{{{RSVP}}}</li>
        {{/if}}
        {{#if Notes}}
        <li>{{{Notes}}}</li>
        {{/if}}
      </ul>
  </div>
</li>
