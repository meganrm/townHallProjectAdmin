{
  "globals": {
    "err": true,
    "req": true,
    "res": true,
    "next": true,
    "moment": true,
    "expect": true,
    "TownHall": true,
    "Moc": true,
    "firebase": true,
    "Handlebars": true,
    "$": true,
    "statesAb": true,
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "rules": {
    "no-console": "off",
    "indent": [ "error", 4 ],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  },
  "ecmaFeatures": {
    "modules": true,
    "impliedStrict": true,
    "experimentalObjectRestSpread": true
  },
  "extends": "eslint:recommended"
}
